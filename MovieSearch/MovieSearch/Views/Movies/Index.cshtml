@model MovieSearch.ViewModels.Movies.MovieIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{<p>
        <a asp-action="Create">Create New</a>
    </p>
}

<form asp-action="Index" method="get">
    <p>
        <select name="genreId" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
        <input type="submit" value="Filter" />
    </p>
</form>
<form asp-action="IndexSearch" method="get">
    <p>
        <input type="search" value="@ViewBag.SearchValue" name="searchValue" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).OveralRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OveralRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre.Name)
            </td>

            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            }
            else
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>

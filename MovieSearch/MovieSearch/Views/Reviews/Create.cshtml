@model MovieSearch.Models.Review

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="UserProfileId" value="@ViewData["UserProfileId"]" />
            <input type="hidden" asp-for="MovieId" value="@ViewData["MovieId"]" />

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <textarea asp-for="Content" class="form-control" placeholder="Text..." ></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Details" asp-controller="Movies" asp-route-id="@ViewBag.MovieId">Cancel</a>

            </div>
        </form>
    </div>
</div>

<div class="row">
    <a asp-action="Index">Back to List</a>
  
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

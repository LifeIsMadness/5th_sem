@model MovieSearch.ViewModels.Movies.MovieIndexViewModel

@{
    ViewData["Title"] = "All movies";
}

<h1>View</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).OveralRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies.ElementAt(0).Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OveralRating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

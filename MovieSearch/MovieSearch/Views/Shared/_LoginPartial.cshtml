@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject MovieSearch.Data.ApplicationDbContext _context

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" >
            @if (UserManager.GetUserAsync(User).Result.ProfilePictureId != null)
            {
                <img class="profile_avatar" src="data:image/*;base64,@(Convert.ToBase64String(_context.ProfilePictures
                                                                     .FirstOrDefaultAsync(p => p.Id == UserManager.GetUserAsync(User).Result.ProfilePictureId)
                                                                     .Result.Picture ))">
            }
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" title="Show" asp-controller="UserMovies" asp-route-userId="@UserManager.GetUserId(User)" asp-action="Favourites">My movies</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Movies", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

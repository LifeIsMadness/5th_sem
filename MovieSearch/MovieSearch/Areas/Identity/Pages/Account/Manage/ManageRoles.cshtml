@page
@model ManageRolesModel
@{
    ViewData["Title"] = "All users";
    ViewData["ActivePage"] = ManageNavPages.ManageRoles;
}

<h4>@ViewData["Title"]</h4>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.ViewModel.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Roles</td>
                <td>
                    <a class="btn btn-primary" asp-page="./SetRoles" asp-route-userId="@user.UserId">Manage</a>
                </td>
            </tr>
        }
    </tbody>
</table>
